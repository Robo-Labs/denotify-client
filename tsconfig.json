{
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "commonjs",
			"sourceMap": true,
		},
		"include": [
			"test/**/*"
		]
	},
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"declarationDir": "types",
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strict": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"@types/**/*",
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
